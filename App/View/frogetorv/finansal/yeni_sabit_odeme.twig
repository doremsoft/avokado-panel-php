{% extends "layout-light.twig" %}




{% block content %}

    {% if mobile == 1 %}
        <div class="row">

            <div class="col-md-12" style="margin-bottom: 15px;">
                <a href="{{url}}/cari/list" class="btn btn-danger waves-effect waves-light">
                    <i class="fa fa-backward mr-2"></i>Geri Dön</a>
            </div>
        </div>
    {% endif %}

    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form id="logout-form" action="{{url}}/finansal/sabit-odeme-kayit" method="post">
                                {{csrf | raw}}

                                <input type="hidden" name="cari_id" value="{{ cari.id }}"/>



                                <div class="form-group">
                                    <label>Ödeme Hesabı:</label>
                                    <input type="text" class="form-control"  value="{{ cari.cari_adi }}" readonly>
                                </div>



                                <div class="form-group">
                                    <label>Ödeme Adı:</label>
                                    <input type="text" class="form-control" name="baslik" required="">
                                </div>


                                <div class="form-group">
                                    <label>Tutar:</label>
                                    <input type="text" class="form-control" name="tutar"  required="">
                                </div>

                                <div class="form-group">
                                    <label>Döviz: </label>
                                    <select class="form-control" name="tutar_doviz">


                                        <option value="TL">TL</option>



                                    </select>
                                </div>


                                <div class="form-group">
                                    <label>Geçerlilik Tarihi:</label>
                                    <input type="date" class="form-control" name="baslama_tarihi" value="{{ bugun }}" >
                                </div>

                                <div class="form-group">
                                    <label>Geçerlilik Son Tarihi:</label>
                                    <input type="date" class="form-control" name="bitis_tarihi"  value="{{ seneyebugun }}">
                                </div>


                                <div class="form-group">
                                    <label>Düzenli Ödeme Ayın Hangi Günü ?</label>
                                    <select class="form-control" name="gun">

                                        {% for gun in gunler %}
                                        <option value="{{ gun }}">{{ gun }}</option>
                                        {% endfor %}

                                    </select>
                                </div>


                                <div class="form-group">
                                    <label>Açıklama:</label>
                                    <textarea class="form-control" name="aciklama"></textarea>
                                </div>


                                <hr>
                                <div class="form-group">
                                    <label>Bildirim </label>
                                    <select class="form-control" name="bildirim_durum">


                                            <option value="1">Aktif</option>
                                        <option value="0">Pasif</option>


                                    </select>
                                </div>



                                <div class="form-group">
                                    <label>Önceden Bildirim Günü (Ödeme Tarihinden Seçtiğiniz Gün Kadar Önce Bildirim Gönderir max 3 Gün)</label>
                                    <input type="number" max="3" min="0" class="form-control" value="1" name="ondecen_bildirim" required><br>
                                    <small>Eğer 0 yazılır ise önceden bilgirim kapalı anlamına gelir</small>
                                </div>


                                <div class="form-group">
                                    <label>Aynı Gün Bildirim</label>
                                    <select class="form-control" name="ayni_gun_bildirim">

                                        <option value="1">Aktif</option>
                                        <option value="0">Pasif</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Birgün Sonra Bildirim</label>
                                    <select class="form-control" name="ertesi_gun_bildirim">

                                        <option value="0" selected>Pasif</option>
                                        <option value="1">Aktif</option>

                                    </select>
                                </div>

                                <button type="submit" class="btn btn-primary">Ekle</button>
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>    </div>

{% endblock %}

{% block footer %}




{% endblock %}

