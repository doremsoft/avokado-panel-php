{% extends "layout-light.twig" %}


    
{% block content %}

    {% if mobile == 1 %}
        <div class="row">

            <div class="col-md-12" style="margin-bottom: 15px;">
                <a href="{{url}}/cari/list" class="btn btn-danger waves-effect waves-light">
                    <i class="fa fa-backward mr-2"></i>Geri Dön</a>
            </div>
        </div>
    {% endif %}


    <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form id="logout-form" action="{{url}}/cari/update" method="post">
                            {{csrf | raw}}

                            <input type="hidden" name="id" value="{{cari.id}}"/>

                            <div class="form-group">
                                <label>Cari Kod</label>
                                <input type="text" class="form-control" name="cari_kod" value="{{cari.cari_kod}}">
                            </div>

                            <div class="form-group">
                                <label>Adı</label>
                                <input type="text" class="form-control" name="cari_adi" required="" value="{{cari.cari_adi}}">
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                                <input type="text" class="form-control tr_telephone" data-mask="(999) 999-99-99" name="cari_telefon" value="{{cari.cari_telefon}}">
                            </div>
                            <div class="form-group">
                                <label>Gsm</label>
                                <input type="text" class="form-control tr_telephone" name="cari_gsm" data-mask="(999) 999-99-99" value="{{cari.cari_gsm}}">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" name="cari_mail" value="{{cari.cari_mail}}">
                            </div>
                            <div class="form-group">
                                <label>Adres</label>
                                <textarea name="cari_adres" class="form-control">{{cari.cari_adres}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>Detay</label>
                                <textarea name="cari_detay" class="form-control">{{cari.cari_detay}}</textarea>
                            </div>
                            
                            
                                <div class="form-group">
                                <label>Tanımlı Kredi Limit (TL)</label>
                                <input type="text" class="form-control" name="cari_kredi_limit" required="" value="{{cari.cari_kredi_limit}}">
                            </div>
                            
                            
                                <div class="form-group">
                                <label>Tanımlı Vade Günü</label>
                                <input type="text" class="form-control" name="cari_vade_gun" required="" value="{{cari.cari_vade_gun}}">
                            </div>
                            
                     
                            <div class="form-group">
                                <label>Vergi No / Tc Kimlik No</label>
                                <input type="text" class="form-control" name="cari_vergi_no" required="" value="{{cari.cari_vergi_no}}">
                            </div>
                            <div class="form-group">
                                <label>Vergi Dairesi</label>
                                <input type="text" class="form-control" name="cari_vergi_daire" value="{{cari.cari_vergi_daire}}">
                            </div>
                          
                            
                          

                            <button type="submit" class="btn btn-success">Güncelle</button> 
    
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
                            </div>

{% endblock %}

{% block footer %}


    <script src="{{asset('plugins/inputmask/js/inputmask.min.js')}}"></script>

    <script src="{{asset('plugins/inputmask/js/jquery.inputmask.min.js')}}"></script>

    <script src="{{asset('plugins/inputmask/js/autoNumeric.js')}}"></script>

    <script src="{{asset('js/pages/form-masking-custom.js')}}"></script>
    
    <script>
        
        
$(document).ready(function() {

    $(".tr_telephone").inputmask({
        mask: "(999) 999-99-99"
    });


});
    </script>

{% endblock %} 

