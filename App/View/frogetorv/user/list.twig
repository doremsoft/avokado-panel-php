{% extends "layout-light.twig" %}

    
    
{% block content %}

    <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Kullanıcılar</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped">
   <thead>
                                        <tr>
                                            <th>Ad Soyad</th>
                                            <th>Mail </th>
                                             <th>Admin</th>
                                    
                                            <th>İşlem</th>
                                            
                                                    <th>Yetkiler</th>
                                        </tr>
                                    </thead>
                                <tbody>
                                    {% for list in user_list  %}
                                        <tr>

                                         
                                            <td>{{list.name}} {{list.surname}}</td>
                                            
                                         
                                            <td>{{list.email}}</td>
                                            
                                         
                                            <td> {% if list.admin == 1 %}
                                                     <b> Admin</b>
                                                     {% else %}
                                              
                                              Standart
                                            
                                                     {% endif %}</td>
                                            
                                                    
                                                    
                                            <td width="250px">
                                              
                                              <a href="{{ url }}/user/edit/{{ list.id }}" class="btn btn-icon btn-primary" >Bilgileri Güncelle</a>
                                            </td>
                                            
                                             <td width="250px">
                                                 {% if list.admin == 1 %}
                                                     <b> Admin Sınırsız Yetki</b>
                                                     {% else %}
                                              
                                              <a href="{{ url }}/user/auth/{{ list.id }}" class="btn btn-icon btn-primary" >Yetkileri Düzenle</a>
                                            
                                                     {% endif %}
                                                     </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div></div>

{% endblock %}

