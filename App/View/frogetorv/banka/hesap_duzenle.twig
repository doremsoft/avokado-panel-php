{% extends "layout-light.twig" %}

{% block backbtn %}

    <a href="{{url}}/banka/banka-hesaplari/{{ banka_id }}" class="btn btn-danger waves-effect waves-light">
        <i class="fa fa-backward mr-2"></i>{{ banka_detay.banka_adi }} Hesap Listesine Dön</a>
    {% endblock %}


{% block content %}


    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                  <h5>{{ banka_detay.banka_adi }}</h5>
            
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-12">
                        <form id="logout-form" action="{{url}}/banka/hesap/guncelle" method="post">
                            {{csrf | raw}}

                            <input type="hidden" name="banka_id" value="{{ banka_id }}"/>
                             <input type="hidden" name="hesap_id" value="{{hesap.id }}"/>
                            <div class="form-group">
                                <label>Hesap Adı:</label>
                                <input type="text" name="hesap_adi" class="form-control" value="{{hesap.hesap_adi}}" required/>
                            </div>
                            <div class="form-group">
                                <label>Şube Kodu:</label>
                                <input type="text" name="hesap_sube_no" value="{{hesap.hesap_sube_no}}" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Hesap No:</label>
                                <input type="text" name="hesap_no" value="{{hesap.hesap_no}}" class="form-control"/>
                            </div>

                            <div class="form-group">
                                <label>İban No:</label>
                                <input type="text" name="hesap_iban" value="{{hesap.hesap_iban}}" class="form-control" required/>
                            </div>

                            <button type="submit" class="btn btn-primary">Hesap Bilgilerini Güncelle</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>



{% endblock %}
