{% extends "layout-light.twig" %}

{% block backbtn %}

    <a href="{{url}}/parametreler/" class="btn btn-danger waves-effect waves-light">
        <i class="fa fa-backward mr-2"></i>Parametrelere Dön</a>
    {% endblock %}
    
    
{% block content %}



    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Hesap İşlemleri İçin Banka Seçiniz:</h5>
            </div>
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped">

                                <tbody>
                                    {% for banka in bankalar  %}
                                        <tr>

                                         
                                            <td>
                                   
                                                <a href="{{ url }}/banka/banka-hesaplari/{{ banka.id }}" class="btn btn-icon btn-primary col-md-6" >{{banka.banka_adi}} Hesap İşlemleri</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}